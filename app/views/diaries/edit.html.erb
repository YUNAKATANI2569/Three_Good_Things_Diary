
<div class="row">
	<div class="col-md-6 col-md-offset-3">
<h2>投稿編集</h2>
 <% if @diary.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@diary.errors.count, "件 エラー") %> </h3>

      <ul>
        <% @diary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model:@diary,url: diary_path(@diary.id), local:true do |f| %>
 <table>
    <div>
     <h4>日記</h4>
     <%= f.text_area :body, size:"90x6" %>
       <button type="submit" class="btn btn-primary">更新</button>
    </div>
<% end %>
</table>
<div class="col-md-3">
  <%= link_to "戻る", diary_path(@diary),class: "btn btn-warning" %>
</div>
</div>
</div>