<header>
   <nav class="bar-left">
   <%= link_to root_path do%>
   <%= image_tag "55.png" %><font size="6">Three Good Things Diary</font>
   <% end %>
 </nav>
 <div class="container">

  <ul class="nav navbar-nav navbar-right">
   <% if user_signed_in? %>
   <h5>ようこそ、<%=current_user.name%>さん</h5>
   <li><%= link_to ' マイページ', user_path(current_user) %></li>
   <li><%= link_to ' 投稿 ', new_diary_path %></li>
