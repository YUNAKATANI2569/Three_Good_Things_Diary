
<table class='table'>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>名前</th>


    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= user.name %></td>

        <td><%= "フォロー数: #{user.followings.count}" %></td>
        <td><%= "フォロワー数: #{user.followers.count}" %></td>
           <td><%= link_to '詳細', user_path(user), class:"btn-sm btn-primary user_#{user.id}" %></td>
       <td> <%= render "relationships/follow_button", user: user %></td>
      </tr>
    <% end %>
  </tbody>
</table>