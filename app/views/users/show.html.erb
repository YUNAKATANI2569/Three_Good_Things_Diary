 <p id="notice">
<%=  notice %>
</p>
<div class="row">


	<div class="col-xs-9">

		<table>

			<tbody>
				<% @diary.each do |diary| %>
				<tr>
					<td>
						<%= link_to user_path(diary.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>

					<td><%= diary.body %></td>

					<% if book.favorited_by?(current_user) %>
					<td>
							<%= link_to diary_favorites_path(diary), method: :delete do %>
							<span class="glyphicon glyphicon-heart"><%= diary.favorites.count%></span>
							<% end %>
					</td>
							<% else %>
							<td>
						 	 <%= link_to diary_favorites_path(diary), method: :post do %>
						   <span class="glyphicon glyphicon-heart-empty"><%= diary.favorites.count %></span>
						  <% end %>
					</td>

				<% end %>
			<td><div class="comment-list bt style-2" id="comments"></td>
			<td><div class="float-wrapper"></td>
			<td class="comment-count">コメント数：<%= diary.comments.count %></h2></td>
			</div>
			</tr>
			</tbody>
			<% end %>

		</table>
	</div>
</div>